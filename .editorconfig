# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html, css, js}]
indent_style = tab
indent_size = 2

[*.json]
indent_size = 3
indent_style = tab

[*.{md, py}]
indent_size = 4
indent_style = space
